        </HBox>
        <Box>
			<VBox name="link_tip_page" visible="false">
				<HBox height="auto" valign="center" margin="0,20,0,0">
					<Control width="auto" height="auto" margin="20,0,10,0" bkimage="link_tip.png"/>
					<Label name="link_tip_label" font="4" text="网络连接断开"/>			
				</HBox>
				<HBox>
					<Control />
