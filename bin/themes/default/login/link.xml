            </HBox>
            <HBox name="link_success_page" height="auto" valign="center" visible="false">
                <Control width="auto" height="auto" margin="20,0,10,0" valign="center" bkimage="link_success.png"/>
                <Label width="200" singleline="false" linelimit="true" font="4" text="网络连接成功，快快使用云信吧。"/>
